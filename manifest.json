{
  "manifest_version": 2,
  "name": "Tabs Should Rest",
  "version": "0.0.0",

  "description": "Like OneTab but leaner, meaner and FOSS",
  "icons": {},

  "browser_action": {
    "default_title": "Tabs Should Rest"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ]
}
